{
  "version": 2,
  "buildCommand": "pnpm run build",
  "outputDirectory": "apps/vue-app/dist",
  "installCommand": "pnpm install",
  "framework": null,
  "builds": [
    {
      "src": "apps/api/api/**/*.ts",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/apps/api/api/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "crons": [
    {
      "path": "/api/cleanup-expired",
      "schedule": "0 0 * * *"
    }
  ]
}
