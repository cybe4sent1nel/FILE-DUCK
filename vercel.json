{
  "buildCommand": "pnpm run build",
  "outputDirectory": "apps/vue-app/dist",
  "installCommand": "pnpm install",
  "functions": {
    "apps/api/api/*.ts": {
      "runtime": "@vercel/node@3.2.29"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/apps/api/api/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "crons": [
    {
      "path": "/api/cleanup-expired",
      "schedule": "0 0 * * *"
    }
  ]
}
