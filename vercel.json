{
  "version": 2,
  "buildCommand": "pnpm run build",
  "outputDirectory": "apps/vue-app/dist",
  "installCommand": "pnpm install",
  "framework": null,
  "builds": [
    {
      "src": "apps/api/api/**/*.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/apps/api/api/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/apps/vue-app/dist/$1"
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/apps/api/api/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/apps/vue-app/dist/index.html"
    }
  ],
  "crons": [
    {
      "path": "/api/cleanup-expired",
      "schedule": "0 */6 * * *"
    }
  ]
}
