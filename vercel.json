{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "apps/vue-app/dist"
      }
    },
    {
      "src": "apps/api/api/**/*.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/upload-meta",
      "dest": "/apps/api/api/upload-meta.ts",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/api/complete-upload",
      "dest": "/apps/api/api/complete-upload.ts",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/api/redeem",
      "dest": "/apps/api/api/redeem.ts",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/api/health",
      "dest": "/apps/api/api/health.ts",
      "methods": ["GET", "OPTIONS"]
    },
    {
      "src": "/api/(.*)",
      "dest": "/apps/api/api/$1.ts"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "crons": [
    {
      "path": "/api/cleanup-expired",
      "schedule": "0 0 * * *"
    }
  ]
}
