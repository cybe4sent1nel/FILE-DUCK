{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["node"],
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false
  },
  "include": ["api/**/*", "lib/**/*"],
  "exclude": ["node_modules", "dist", ".vercel"]
}
